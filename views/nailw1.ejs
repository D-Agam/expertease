<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Women's Nail Studio</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f8f8;
            color: #333;
        }

        header {
            background-color: #ff99cc;
            color: #fff;
            padding: 20px;
            text-align: center;
        }

        section {
            padding: 20px;
        }

        .service {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            border-bottom: 1px solid #ccc;
            padding: 20px 0;
        }

        .service img {
            max-width: 120px;
            border-radius: 8px;
            margin-right: 20px;
        }

        .service-info {
            flex-grow: 1;
        }

        .service h2 {
            font-size: 24px;
            margin: 0;
            color: #333;
        }

        .service p {
            color: #666;
            margin: 10px 0;
            font-size: 16px;
        }

        .service-price {
            font-weight: bold;
            font-size: 18px;
            color: #1a1a1a;
        }

        .service-details {
            display: none;
            margin-top: 10px;
        }

        .view-details {
            cursor: pointer;
            color: #1a1a1a;
            text-decoration: underline;
        }

        .service button {
            background-color: #1a1a1a;
            color: #fff;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease-in-out;
        }

        .service button:hover {
            background-color: #333;
        }

        .cart {
            position: fixed;
            top: 0;
            right: 0;
            background-color: #333;
            color: #fff;
            padding: 20px;
            text-align: center;
            z-index: 999;
        }

        .cart h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        #cart-list {
            list-style: none;
            padding: 0;
        }

        #cart-list li {
            font-size: 16px;
            margin-bottom: 5px;
            display: flex;
            justify-content: space-between;
        }

        #total {
            font-size: 18px;
            font-weight: bold;
        }

        .remove-btn {
            background-color: #ff4d4d;
            color: #fff;
            border: none;
            padding: 5px 10px;
            border-radius: 3px;
            cursor: pointer;
        }

        /* Back navigation arrow */
        .back-arrow {
            position: absolute;
            top: 20px;
            left: 20px;
            font-size: 24px;
            color: #fff;
            text-decoration: none;
        }
    </style>
</head>

<body>

    <header>
        <h1>Women's Nail Studio</h1>
    </header>

    <section>
        <!-- Service 1: Long-lasting Gel Polish -->
        <div class="service" id="gel-polish">
            <img src="Screenshot 2023-11-20 at 12.44.04 AM.png" alt="Long-lasting Gel Polish">
            <div class="service-info">
                <h2>Long-lasting Gel Polish</h2>
                <p>Enjoy vibrant and durable color with our long-lasting gel polish.</p>
                <p class="service-price">Starting from Rs. 1400.00</p>
                <button onclick="addToCart('Long-lasting Gel Polish', 1400.00)">Add to Cart</button>
                <span class="view-details" onclick="toggleDetails('gel-polish-details')">View Details</span>
                <div class="service-details" id="gel-polish-details">
                    <p>Our long-lasting gel polish service includes:</p>
                    <ul>
                        <li>Wide range of color options</li>
                        <li>Professional application for a smooth finish</li>
                        <li>Long-lasting and chip-resistant</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Service 2: Gel Nails Extension -->
        <div class="service" id="gel-extension">
            <img src="Screenshot 2023-11-20 at 12.44.09 AM.png" alt="Gel Nails Extension">
            <div class="service-info">
                <h2>Gel Nails Extension</h2>
                <p>Get the length and style you desire with our gel nails extension service.</p>
                <p class="service-price">Starting from Rs. 1800.00</p>
                <button onclick="addToCart('Gel Nails Extension', 1800.00)">Add to Cart</button>
                <span class="view-details" onclick="toggleDetails('gel-extension-details')">View Details</span>
                <div class="service-details" id="gel-extension-details">
                    <p>Our gel nails extension service includes:</p>
                    <ul>
                        <li>Consultation for nail length and shape</li>
                        <li>Professional extension with gel for a natural look</li>
                        <li>Customized design options</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Service 3: Gel Nail Overlays -->
        <div class="service" id="gel-overlays">
            <img src="Screenshot 2023-11-20 at 12.44.15 AM.png" alt="Gel Nail Overlays">
            <div class="service-info">
                <h2>Gel Nail Overlays</h2>
                <p>Strengthen and enhance your natural nails with our gel nail overlays.</p>
                <p class="service-price">Starting from Rs. 1699.00</p>
                <button onclick="addToCart('Gel Nail Overlays', 1699.00)">Add to Cart</button>
                <span class="view-details" onclick="toggleDetails('gel-overlays-details')">View Details</span>
                <div class="service-details" id="gel-overlays-details">
                    <p>Our gel nail overlays service includes:</p>
                    <ul>
                        <li>Overlay application for added strength</li>
                        <li>Natural and glossy finish</li>
                        <li>Options for nail art and designs</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Service 4: Removal -->
        <div class="service" id="removal">
            <img src="Screenshot 2023-11-20 at 12.44.20 AM.png" alt="Removal">
            <div class="service-info">
                <h2>Removal</h2>
                <p>Safely remove gel polish or extensions with our professional removal service.</p>
                <p class="service-price">Starting from Rs. 1500.00</p>
                <button onclick="addToCart('Removal', 1500.00)">Add to Cart</button>
                <span class="view-details" onclick="toggleDetails('removal-details')">View Details</span>
                <div class="service-details" id="removal-details">
                    <p>Our removal service includes:</p>
                    <ul>
                        <li>Gentle removal without damage to natural nails</li>
                        <li>Moisturizing treatment for nail health</li>
                        <li>Post-removal care advice</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Service 5: Repairs and Refills -->
        <div class="service" id="repairs-refills">
            <img src="Screenshot 2023-11-20 at 12.46.44 AM.png" alt="Repairs and Refills">
            <div class="service-info">
                <h2>Repairs and Refills</h2>
                <p>Keep your nails looking flawless with our repair and refill services.</p>
                <p class="service-price">Starting from Rs. 100.00 per tip</p>
                <button onclick="addToCart('Repairs and Refills', 200.00)">Add to Cart</button>
                <span class="view-details" onclick="toggleDetails('repairs-refills-details')">View Details</span>
                <div class="service-details" id="repairs-refills-details">
                    <p>Our repairs and refills service includes:</p>
                    <ul>
                        <li>Fixing chips, cracks, or breaks</li>
                        <li>Refilling of gel overlays or extensions</li>
                        <li>Polishing for a fresh look</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <div class="cart" id="cart">
        <h2>Cart</h2>
        <ul id="cart-list"></ul>
        <p>Total: Rs<span id="total">0.00</span></p>
    </div>

    <script>
        var cart = [];
        var total = 0.0;

        function goBack() {
            window.history.back();
        }

        function addToCart(serviceName, price) {
            // Add item to the cart array
            cart.push({ service: serviceName, price: price });

            // Update the total
            total += price;

            // Update the cart list
            updateCart();
        }

        function removeFromCart(index) {
            var removedItem = cart.splice(index, 1)[0];
            total -= removedItem.price;
            updateCart();
        }

        function updateCart() {
            var cartList = document.getElementById('cart-list');
            var totalElement = document.getElementById('total');
            cartList.innerHTML = '';
            cart.forEach((item, index) => {
                var listItem = document.createElement('li');
                listItem.innerHTML = `${item.service} - Rs. ${item.price.toFixed(2)} <button class="remove-btn" onclick="removeFromCart(${index})">Remove</button>`;
                cartList.appendChild(listItem);
            });
            totalElement.textContent = ` ${total.toFixed(2)}`;
        }

        function toggleDetails(detailsId) {
            var details = document.getElementById(detailsId);
            details.style.display = details.style.display === 'none' ? 'block' : 'none';
        }
    </script>

</body>

</html>
